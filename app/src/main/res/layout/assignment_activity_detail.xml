<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.assignment.DetilActivity"
    android:background="@color/white">

    <include
        layout="@layout/header_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lnly_body_00"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#28000000"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="Nama JP"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:background="#28000000"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Angsuran"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:background="#28000000"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Total Angsuran"
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"/>
                        <View
                            android:background="#28000000"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Status"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="#de000000"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvw_data_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:weightSum="4"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="Total"
                    android:textSize="13sp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="2.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_money_00"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:background="#33000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/txvw_size_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total ada 0 sales order"
                android:layout_marginTop="8dp"
                android:gravity="end" />

            <Button
                android:id="@+id/bbtn_finish_00"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ripple_btn"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/lnly_root_00"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvw_no_00"
            android:text="Nama JP"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#1997e7"
            android:textSize="13sp"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#28000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txvw_consumen_00"
            android:text="Angsuran"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#de000000"
            android:textSize="13sp"
            android:layout_width="130dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#28000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txvw_installment_00"
            android:text="Angsuran"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#de000000"
            android:layout_width="70dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#28000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txvw_pay_00"
            android:text="Status"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#de000000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#28000000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txvw_status_00"
            android:text="Status"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#de000000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="#28000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvw_title_00"
        android:text="Data Penagihan"
        android:textColor="#de000000"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.wadaro.collector.component.SelectView
        android:id="@+id/slvw_date_00"
        android:layout_below="@+id/txvw_title_00"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:id="@+id/hzvw_data_00"
        android:layout_below="@+id/slvw_date_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#28000000"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:text="No. Kwitansi"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="#28000000"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Konsumen"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="#28000000"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Angsuran"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="#28000000"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Bayar"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="#28000000"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Status"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvw_data_00"
                android:minHeight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="#28000000"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:layout_width="270dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Total"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/txvw_total_00"
                    android:text="Rp 0"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
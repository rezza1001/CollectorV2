<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvw_title_00"
        android:text="Data Rekap Penagihan"
        android:textColor="#de000000"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.wadaro.collector.component.SelectView
        android:id="@+id/slvw_date_00"
        android:layout_below="@+id/txvw_title_00"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/slvw_date_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:text="Tagihan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#de000000"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#28000000"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="Keterangan"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="Jumlah Kwitansi"
                        android:gravity="center"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:text="Nominal"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvw_data_00"
                    android:minHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="#28000000"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="Total"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txvw_qty_00"
                        android:text="Total"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/txvw_total_00"
                        android:text="Rp 0"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Pembayaran"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#de000000"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#28000000"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="Keterangan"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="Jumlah\nUnit"
                        android:gravity="center"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:text="Nominal"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvw_data_11"
                    android:minHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="#28000000"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="Total"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txvw_qty_11"
                        android:text="Total"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/txvw_total_11"
                        android:text="Rp 0"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="#de000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
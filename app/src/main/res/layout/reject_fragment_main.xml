<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Data Barang Reject"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="Tanggal Kirim"
                    android:textStyle="normal"
                    android:textColor="#de000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txvw_date_00"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="5"
                android:background="#28000000"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:text="Barang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="2.3"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Terkirim"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Sisa"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Reject"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvw_demo_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="5"
                android:background="#ECECEC"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="Total barang"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#de000000"
                    android:textStyle="normal"
                    android:layout_weight="2.3"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txvw_accept_00"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/txvw_current_00"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/txvw_reject_00"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:layout_weight="0.9"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txvw_size_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total ada 0 titik survey"
                android:layout_marginTop="8dp"
                android:gravity="right" />




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
